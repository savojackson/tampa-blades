{
  "name": "tampa-blades",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@giphy/js-fetch-api": "^5.7.0",
    "@giphy/react-components": "^10.1.0",
    "@types/leaflet": "^1.9.20",
    "@types/react-router-dom": "^5.3.3",
    "bootstrap": "^5.3.7",
    "cra-template-pwa-typescript": "2.0.0",
    "emoji-mart": "^5.6.0",
    "emoji-picker-react": "^4.13.2",
    "leaflet": "^1.9.4",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.0",
    "react-emoji-picker": "^1.0.13",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.7.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "backend": "cd backend && node server.js",
    "dev": "concurrently \"npm run backend\" \"npm start\"",
    "server": "cd backend && node server.js",
    "setup": "npm install && cd backend && npm install",
    "setup:db": "cd backend && node setup-database.js",
    "dev:windows": "concurrently \"cd backend && node server.js\" \"npm start\"",
    "dev:macos": "concurrently \"cd backend && node server.js\" \"npm start\"",
    "vercel-build": "npm run build",
    "db:check": "cd backend && node check-db.js",
    "db:reset": "cd backend && rm -f db.sqlite && npm run migrate",
    "db:migrate": "cd backend && npm run migrate",
    "db:users": "cd backend && sqlite3 db.sqlite \"SELECT id, username, email, role FROM users;\"",
    "db:spots": "cd backend && sqlite3 db.sqlite \"SELECT id, name, type, difficulty FROM skate_spots LIMIT 10;\"",
    "db:events": "cd backend && sqlite3 db.sqlite \"SELECT id, title, eventType, date, approved FROM events LIMIT 10;\"",
    "db:stats": "cd backend && sqlite3 db.sqlite \"SELECT 'Users:' as table_name, COUNT(*) as count FROM users UNION SELECT 'Events:', COUNT(*) FROM events UNION SELECT 'Spots:', COUNT(*) FROM skate_spots UNION SELECT 'Photos:', COUNT(*) FROM gallery_photos;\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^8.2.2",
    "jest": "^27.5.1"
  }
}
